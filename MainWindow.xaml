<Window x:Class="First_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:First_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Canvas>
        <Label Content="First Name" Canvas.Left="76" Canvas.Top="67"/>
        <Label Content="Last Name" Canvas.Left="76" Canvas.Top="98" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="Full Name" Canvas.Left="77" Canvas.Top="129" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFirstName" Canvas.Left="159" TextWrapping="Wrap" Canvas.Top="71" Width="120"/>
        <TextBox x:Name="txtLastName" Canvas.Left="159" TextWrapping="Wrap" Canvas.Top="102" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFullName" Canvas.Left="159" TextWrapping="Wrap" Canvas.Top="133" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="btnDisplayFullName" Content="Display Full Name" Canvas.Left="120" Canvas.Top="169" HorizontalAlignment="Left" VerticalAlignment="Top" Width="126" Click="btnDisplayFullName_Click"/>


    </Canvas>

</Window>
